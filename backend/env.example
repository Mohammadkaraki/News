# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/news-db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Email Configuration (for user registration/notifications)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Admin User Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=admin123456

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Telegram Bot Configuration
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
TELEGRAM_SESSION_STRING=your-session-string-here

# Article Service Configuration
API_BASE_URL=http://localhost:5000/api
DEFAULT_AUTHOR_ID=your-default-author-id
USE_DIRECT_DB=true

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here 